{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2019",
        "module": "ESNext",
        "lib": ["ESNext", "dom", "dom.iterable"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "skipDefaultLibCheck": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "paths": {
            "@cosmic/core/browser": ["./packages/core/browser/index.ts"],
            "@cosmic/core/parts": ["./packages/core/parts/index.ts"],
        }
    },
    "include": [
        "**/*.vue",
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/dist/**", 
        "**/node_modules/**"
    ]
}
